{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@users/*": ["common/models/users/*"],
      "@products/*": ["common/models/products/*"],
      "@baskets/*": ["common/models/baskets/*"],
      "@user-permissions/*": ["common/models/user-permissions/*"],
      "@permissions/*": ["common/models/permissions/*"],
      "@auth/*": ["auth/*"],
      "@shared/*": ["shared/*"],
      "@guards/*": ["guards/*"],
      "@database/*": ["database/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}

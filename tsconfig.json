{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@users/*": ["database/users/*"],
      "@products/*": ["database/products/*"],
      "@users-products/*": ["database/users-products/*"],
      "@user-permissions/*": ["database/user-permissions/*"],
      "@permissions/*": ["database/permissions/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}

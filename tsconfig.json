{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@users/*": ["database/users/*"],
      "@products/*": ["database/products/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}
